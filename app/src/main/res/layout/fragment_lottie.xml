<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LottieFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WatchNext"
        android:textSize="50sp"
        android:gravity="center"
        android:fontFamily="@font/titan_one_regular"
        android:textColor="#716666"
        android:layout_marginTop="-100dp"
        android:layout_alignTop="@+id/animationLottie"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationLottie"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/popcorn"/>

</RelativeLayout>